<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="480.0" prefWidth="660.0" stylesheets="@../../application/application.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.view.CreateViewController">
   <children>
      <VBox prefHeight="480.0" prefWidth="660.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER" prefWidth="580.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#finishButtonPushed" prefWidth="100.0" text="Finish">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></Button>
                  <Region prefHeight="25.0" prefWidth="470.0" />
               </children>
            </HBox>
            <ScrollPane prefHeight="460.0" prefWidth="580.0">
               <content>
                  <VBox prefWidth="660.0">
                     <children>
                        <Label fx:id="recipeNameLabel" alignment="CENTER" prefWidth="660.0" text="Label">
                           <font>
                              <Font name="System Bold" size="25.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </Label>
                        <VBox alignment="TOP_CENTER">
                           <children>
                              <ImageView fx:id="imageView" fitHeight="180.0" fitWidth="260.0" pickOnBounds="true" preserveRatio="true">
                                 <VBox.margin>
                                    <Insets bottom="5.0" top="5.0" />
                                 </VBox.margin></ImageView>
                              <Button id="secondary-button" mnemonicParsing="false" onAction="#chooseImageButtonPushed" prefWidth="100.0" text="Choose Image">
                                 <VBox.margin>
                                    <Insets bottom="5.0" top="5.0" />
                                 </VBox.margin></Button>
                           </children>
                        </VBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="25.0">
                           <children>
                              <Label text="Author: ">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                              </Label>
                              <Label fx:id="authorLabel" text="Label">
                                 <font>
                                    <Font size="13.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="25.0">
                           <children>
                              <Label text="Serve Number: ">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                              </Label>
                              <Label fx:id="serveNumLabel" text="Label">
                                 <font>
                                    <Font size="13.0" />
                                 </font>
                              </Label>
                              <Button id="secondary-button" mnemonicParsing="false" onAction="#updateSerNum" prefWidth="50.0" styleClass="primary-line-btn" text="Edit">
                                 <font>
                                    <Font size="8.0" />
                                 </font>
                                 <HBox.margin>
                                    <Insets left="20.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="25.0">
                           <children>
                              <Label text="Preparation Time: ">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                              </Label>
                              <Label fx:id="preparationTimeLabel" text="Label">
                                 <font>
                                    <Font size="13.0" />
                                 </font>
                              </Label>
                              <Label text=" minutes">
                                 <font>
                                    <Font size="13.0" />
                                 </font>
                              </Label>
                              <Button id="secondary-button" mnemonicParsing="false" onAction="#updatePreparationTime" prefWidth="50.0" styleClass="primary-line-btn" text="Edit">
                                 <font>
                                    <Font size="8.0" />
                                 </font>
                                 <HBox.margin>
                                    <Insets left="20.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="25.0">
                           <children>
                              <Label text="Cooking Time: ">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                              </Label>
                              <Label fx:id="cookingTimeLabel" text="Label">
                                 <font>
                                    <Font size="13.0" />
                                 </font>
                              </Label>
                              <Label text=" minutes">
                                 <font>
                                    <Font size="13.0" />
                                 </font>
                              </Label>
                              <Button id="secondary-button" mnemonicParsing="false" onAction="#updateCookingTime" prefWidth="50.0" styleClass="primary-line-btn" text="Edit">
                                 <font>
                                    <Font size="8.0" />
                                 </font>
                                 <HBox.margin>
                                    <Insets left="20.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                        <Label prefHeight="25.0" text="Ingredients:">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Label>
                        <HBox alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="660.0">
                           <children>
                              <Button id="secondary-button" mnemonicParsing="false" onAction="#addIngredientClicked" prefWidth="180.0" styleClass="primary-line-btn" text="Add Ingredient">
                                 <font>
                                    <Font size="8.0" />
                                 </font>
                                 <HBox.margin>
                                    <Insets right="40.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" />
                        <VBox fx:id="ingredientBox" maxWidth="-Infinity" prefWidth="620.0" />
      		                  <Label prefHeight="25.0" prefWidth="580.0" text="Preparation Steps:">
      		                     <font>
      		                        <Font name="System Bold" size="13.0" />
      		                     </font>
      		                  </Label>
                        
                              <VBox fx:id="stepBox" maxWidth="-Infinity" prefWidth="640.0" spacing="5.0" />
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
