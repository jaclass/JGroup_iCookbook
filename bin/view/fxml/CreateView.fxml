<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../../application/application.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.view.CreateViewController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" spacing="10.0">
         <children>
            <HBox alignment="CENTER" prefWidth="580.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#finishButtonPushed" prefWidth="100.0" text="Finish Edit" />
                  <Region prefHeight="25.0" prefWidth="380.0" />
                  <Label fx:id="authorLabel" alignment="CENTER_RIGHT" onMouseClicked="#usernameMouseClicked" prefWidth="80.0" text="Label" underline="true">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Label>
               </children>
            </HBox>
            <ScrollPane prefHeight="355.0" prefWidth="580.0">
               <content>
                  <VBox prefWidth="580.0">
                     <children>
                        <Label fx:id="recipeNameLabel" alignment="CENTER" prefWidth="580.0" text="Label">
                           <font>
                              <Font size="30.0" />
                           </font>
                        </Label>
                        <HBox>
                           <children>
                              <Label text="Author: ">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                              </Label>
                              <Label fx:id="authorLabel" text="Label">
                                 <font>
                                    <Font size="13.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox>
                           <children>
                              <Label text="Serve Number: ">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                              </Label>
                              <Label fx:id="serveNumLabel" text="Label">
                                 <font>
                                    <Font size="13.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox>
                           <children>
                              <Label text="Preparation Time: ">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                              </Label>
                              <Label fx:id="preparationTimeLabel" text="Label">
                                 <font>
                                    <Font size="13.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox>
                           <children>
                              <Label text="Cooking Time: ">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                              </Label>
                              <Label fx:id="cookingTimeLabel" text="Label">
                                 <font>
                                    <Font size="13.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <Label prefWidth="580.0" text="Ingredients:">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Label>
                        <VBox maxWidth="560.0" prefWidth="560.0" />
      		                  <Label prefWidth="580.0" text="Preparation Steps:">
      		                     <font>
      		                        <Font name="System Bold" size="13.0" />
      		                     </font>
      		                  </Label>
                        
                              <VBox fx:id="stepBox" maxWidth="560.0" spacing="5.0" />
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
