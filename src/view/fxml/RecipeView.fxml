<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../../application/application.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.view.RecipeViewController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" spacing="10.0">
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#backButtonPushed" prefWidth="100.0" text="Back Home" />
                  <Region prefHeight="25.0" prefWidth="380.0" />
                  <Label fx:id="usernameLabel" alignment="CENTER_RIGHT" onMouseClicked="#usernameMouseClicked" prefWidth="80.0" text="Label" underline="true">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <ScrollPane prefHeight="345.0" prefWidth="580.0">
               <content>
                  <VBox prefWidth="580.0" spacing="5.0">
                     <children>
                        <Label fx:id="recipeNameLabel" alignment="CENTER" prefWidth="580.0" text="Label">
                           <font>
                              <Font name="System Bold" size="25.0" />
                           </font>
                        </Label>
                        <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <ImageView fx:id="imageView" fitHeight="180.0" fitWidth="260.0" pickOnBounds="true" preserveRatio="true" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="25.0">
                           <children>
                              <Label text="Author: ">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                              </Label>
                              <Label fx:id="authorLabel" text="Label">
                                 <font>
                                    <Font size="13.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT">
                           <children>
                              <Label text="Serve Number: ">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                              </Label>
                              <Label fx:id="serveNumLabel" prefWidth="40.0" text="Label">
                                 <font>
                                    <Font size="13.0" />
                                 </font>
                              </Label>
                              <Region prefWidth="33.0" />
                              <Label text="You can click here to change the serve number. -&gt; ">
                                 <font>
                                    <Font size="13.0" />
                                 </font></Label>
                              <Button id="secondary-button" mnemonicParsing="false" onAction="#changeButtonPushed" prefWidth="100.0" text="Change" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="25.0">
                           <children>
                              <Label text="Preparation Time: ">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                              </Label>
                              <Label fx:id="preparationTimeLabel" text="Label">
                                 <font>
                                    <Font size="13.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="25.0">
                           <children>
                              <Label text="Cooking Time: ">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                              </Label>
                              <Label fx:id="cookingTimeLabel" text="Label">
                                 <font>
                                    <Font size="13.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <Label prefHeight="25.0" prefWidth="580.0" text="Ingredients:">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Label>
                        <VBox fx:id="ingredientBox" maxWidth="560.0" prefWidth="560.0" />
                        <Label prefHeight="25.0" prefWidth="580.0" text="Preparation Steps:">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Label>
                        <VBox fx:id="stepBox" maxWidth="560.0" prefWidth="560.0" />
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
